# vim: set syntax=python:

LIBRARIES = [
    'calstis',
    'tastis'
    ]

def build(bld):
    for library in LIBRARIES:
        bld.recurse(library)

    bld(name='stis',
        depends_on=[
            'cs0.e',
            'cs1.e',
            'cs2.e',
            'cs6.e'],
        always=True)
